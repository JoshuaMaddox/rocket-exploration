<!doctype html>
{% block htmlTag %}
<html lang="{{ site.lang }}" dir="{{ site.dir }}">
{% endblock htmlTag %}

  {% block head %}
    <head>
      {% for blockName, blockPath in _joiningBlocks.head %}
        {% include blockPath %}
      {% endfor %}
    </head>
  {% endblock head %}

  {% block bodyTag %}
    <body layout="{{ layout }}">
  {% endblock bodyTag %}

    {% block header %}
      {% include 'kin-lander/kin-lander-header.njk' %}
    {% endblock header%}

    {% block main %}
      <div id="content-wrapper">
        <div class="content-area">
          {% block content %}
            {% include 'partials/content.njk' %}
          {% endblock content %}
        </div>
      </div>
    {% endblock main %}

    {% block footer %}
      {% include 'partials/footer.njk' %}
    {% endblock footer %}

    {% include 'partials/bottom.njk' %}
  </body>
</html>
